<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.unina.foodlab.Boundary.NotificheBoundary"
           prefWidth="1200" prefHeight="760">

    <stylesheets>
        <URL value="@../css/home.css" />
    </stylesheets>

    <Pane styleClass="dashboard-background" />

    <VBox spacing="16" alignment="TOP_CENTER" maxWidth="920" styleClass="dashboard-card">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dashboard-header">
            <Label text="Notifiche" styleClass="dashboard-title" />
            <Label fx:id="chefLabel" text="Chef" styleClass="dashboard-subtitle" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="12">
            <Button text="Nuova notifica" onAction="#onNuovaNotificaClick" styleClass="dashboard-button" />
            <Button text="Aggiorna" onAction="#onAggiornaClick" styleClass="secondary-button" />
            <Button fx:id="eliminaButton" text="Elimina selezionata" onAction="#onEliminaClick" styleClass="secondary-button" disable="true" />
            <Button fx:id="dettagliButton" text="Dettagli" onAction="#onDettagliClick" styleClass="secondary-button" disable="true" />
        </HBox>

        <TableView fx:id="notificheTable" prefHeight="600" styleClass="corsi-table">
            <columns>
                <TableColumn fx:id="dataCol" text="Data" prefWidth="180" />
                <TableColumn fx:id="corsoCol" text="Corso" prefWidth="660" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="dashboard-footer">
            <Button text="Indietro" onAction="#onBackClick" styleClass="back-button" />
        </HBox>
    </VBox>

</StackPane>
