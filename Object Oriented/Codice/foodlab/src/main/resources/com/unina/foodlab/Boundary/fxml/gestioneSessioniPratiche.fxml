<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.unina.foodlab.Boundary.GestioneSessioniPraticheBoundary"
           prefWidth="1200" prefHeight="760">

    <stylesheets>
        <URL value="@../css/home.css" />
    </stylesheets>

    <Pane styleClass="dashboard-background" />

    <VBox spacing="16" alignment="TOP_CENTER" maxWidth="880" styleClass="dashboard-card">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dashboard-header">
            <Label text="Sessioni pratiche" styleClass="dashboard-title" />
            <Label fx:id="corsoLabel" text="" styleClass="dashboard-subtitle" />
        </HBox>

        <Label text="Sessioni in presenza" styleClass="section-title" />

        <TableView fx:id="sessioniTable" prefHeight="260" styleClass="corsi-table">
            <columns>
                <TableColumn fx:id="dataCol" text="Data" prefWidth="160" />
                <TableColumn fx:id="aderentiCol" text="Aderenti" prefWidth="120" />
                <TableColumn fx:id="ricetteCol" text="Ricette" prefWidth="260" />
                <TableColumn fx:id="quantitaTotaleCol" text="" prefWidth="200" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="dettaglioRicettaButton" text="Dettagli ricette" onAction="#onDettaglioRicettaClick" styleClass="secondary-button" disable="true" />
        </HBox>

        <HBox spacing="18" maxWidth="920">
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Ricette" styleClass="section-title" />

                <HBox alignment="TOP_LEFT" spacing="12">
                    <TextField fx:id="nuovaRicettaNomeField" promptText="Nome ricetta (suggerimenti)" prefWidth="200" />
                    <TextArea fx:id="nuovaRicettaDescrField" promptText="Descrizione" prefWidth="320" prefHeight="70" wrapText="true" HBox.hgrow="ALWAYS" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <TextField fx:id="nuovaRicettaTempoField" promptText="Tempo (HH:mm:ss)" prefWidth="160" />
                    <Button fx:id="creaRicettaButton" text="Aggiungi ricetta" onAction="#onCreaRicettaClick" styleClass="secondary-button" />
                </HBox>

                <Label fx:id="sessioneSelezionataLabel" text="Ricette della sessione" styleClass="section-title" />
                <ListView fx:id="ricetteListView" prefHeight="200" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Ingredienti" styleClass="section-title" />

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <TextField fx:id="nuovoIngredienteNomeField" promptText="Ingrediente (suggerimenti)" prefWidth="220" />
                    <TextField fx:id="nuovoIngredienteUnitaField" promptText="Unità di misura" prefWidth="150" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <TextField fx:id="ingredienteQuantitaField" promptText="Quantità" prefWidth="120" />
                    <Button fx:id="aggiungiIngredienteButton" text="Aggiungi ingrediente" onAction="#onAggiungiIngredienteClick" styleClass="secondary-button" />
                </HBox>

                <Label fx:id="ingredientiTitoloLabel" text="Ingredienti della ricetta" styleClass="section-title" visible="false" managed="false" />
                <ListView fx:id="ingredientiListView" prefHeight="200" VBox.vgrow="ALWAYS" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Indietro" onAction="#onBackClick" styleClass="back-button" />
        </HBox>
    </VBox>

</StackPane>
