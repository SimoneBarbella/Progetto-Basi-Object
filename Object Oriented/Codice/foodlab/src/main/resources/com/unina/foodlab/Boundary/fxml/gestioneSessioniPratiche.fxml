<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.unina.foodlab.Boundary.GestioneSessioniPraticheBoundary"
           prefWidth="1200" prefHeight="760">

    <stylesheets>
        <URL value="@../css/home.css" />
    </stylesheets>

    <Pane styleClass="dashboard-background" />

    <VBox spacing="16" alignment="TOP_CENTER" maxWidth="880" styleClass="dashboard-card">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dashboard-header">
            <Label text="Sessioni pratiche" styleClass="dashboard-title" />
            <Label fx:id="corsoLabel" text="" styleClass="dashboard-subtitle" />
        </HBox>

        <Label text="Sessioni in presenza" styleClass="section-title" />

        <TableView fx:id="sessioniTable" prefHeight="260" styleClass="corsi-table">
            <columns>
                <TableColumn fx:id="dataCol" text="Data" prefWidth="160" />
                <TableColumn fx:id="aderentiCol" text="Aderenti" prefWidth="120" />
                <TableColumn fx:id="ricetteCol" text="Ricette" prefWidth="260" />
                <TableColumn fx:id="quantitaTotaleCol" text="" prefWidth="200" />
            </columns>
        </TableView>

        <Label fx:id="sessioneSelezionataLabel" text="Ricette della sessione" styleClass="section-title" />

        <HBox alignment="CENTER_LEFT" spacing="12">
            <ComboBox fx:id="ricetteCombo" promptText="Ricetta esistente" prefWidth="220" />
            <Button fx:id="aggiungiRicettaButton" text="Aggiungi ricetta" onAction="#onAddRicettaClick" styleClass="secondary-button" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="12">
            <TextField fx:id="nuovaRicettaNomeField" promptText="Nome ricetta" />
            <TextField fx:id="nuovaRicettaDescrField" promptText="Descrizione" />
            <TextField fx:id="nuovaRicettaTempoField" promptText="Tempo (HH:mm:ss)" />
            <Button fx:id="creaRicettaButton" text="Crea e aggiungi" onAction="#onCreateRicettaClick" styleClass="secondary-button" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="12">
            <ComboBox fx:id="ingredienteCombo" promptText="Ingrediente esistente" prefWidth="200" />
            <TextField fx:id="nuovoIngredienteNomeField" promptText="Nuovo ingrediente" />
            <TextField fx:id="nuovoIngredienteUnitaField" promptText="Unità di misura" />
            <TextField fx:id="ingredienteQuantitaField" promptText="Quantità" />
            <Button fx:id="aggiungiIngredienteButton" text="Aggiungi ingrediente" onAction="#onAddIngredienteClick" styleClass="secondary-button" />
        </HBox>

        <ListView fx:id="ingredientiListView" prefHeight="110" />
        <ListView fx:id="ricetteListView" prefHeight="120" />

        <HBox fx:id="ricetteActionsBox" alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="dettaglioRicettaButton" text="Dettagli ricetta" onAction="#onDettaglioRicettaClick" styleClass="secondary-button" disable="true" />
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Indietro" onAction="#onBackClick" styleClass="back-button" />
        </HBox>
    </VBox>

</StackPane>
