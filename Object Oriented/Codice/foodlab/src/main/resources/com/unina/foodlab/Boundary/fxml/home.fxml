<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.unina.foodlab.Boundary.HomeBoundary"
           prefWidth="1200" prefHeight="760">

    <stylesheets>
        <URL value="@../css/home.css" />
    </stylesheets>

    <Pane styleClass="dashboard-background" />

    <VBox spacing="16" alignment="TOP_CENTER" maxWidth="880" styleClass="dashboard-card">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dashboard-header">
            <Label text="UninaFoodLab" styleClass="dashboard-title" />
            <Label text="Dashboard" styleClass="dashboard-subtitle" />
        </HBox>

        <Label fx:id="welcomeLabel" text="Benvenuto Chef" styleClass="welcome-label" />

        <Label text="I tuoi corsi" styleClass="section-title" />

        <TableView fx:id="corsiTable" prefHeight="180" styleClass="corsi-table">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="60" />
                <TableColumn fx:id="nomeCol" text="Nome" prefWidth="200" />
                <TableColumn fx:id="dataCol" text="Data Inizio" prefWidth="120" />
                <TableColumn fx:id="frequenzaCol" text="Frequenza" prefWidth="120" />
                <TableColumn fx:id="sessioniCol" text="Sessioni" prefWidth="80" />
                <TableColumn fx:id="partecipantiCol" text="Partecipanti" prefWidth="100" />
                <TableColumn fx:id="categorieCol" text="Categorie" prefWidth="200" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="gestisciSessioniButton" text="Gestisci Sessioni" onAction="#onGestisciSessioniClick" disable="true" styleClass="secondary-button" />
        </HBox>

        <Label text="Azioni principali" styleClass="section-title" />

        <FlowPane hgap="18" vgap="18" alignment="CENTER" styleClass="dashboard-buttons" prefWrapLength="720">
                <Button text="Crea Nuovo Corso" onAction="#onCreaCorsoClick" styleClass="dashboard-button" />
                <Button text="Studenti" styleClass="dashboard-button" />
            <Button text="Notifiche" onAction="#onNotificheClick" styleClass="dashboard-button" />
            <Button text="Report" onAction="#onReportClick" styleClass="dashboard-button" />
        </FlowPane>

        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="dashboard-footer">
            <Button text="Impostazioni" styleClass="secondary-button" />
            <Button text="Logout" onAction="#onLogoutClick" styleClass="logout-button" />
        </HBox>
    </VBox>

</StackPane>
