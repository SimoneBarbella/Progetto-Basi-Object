<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.unina.foodlab.Boundary.GestioneSessioniBoundary"
           prefWidth="1200" prefHeight="760">

    <stylesheets>
        <URL value="@../css/home.css" />
    </stylesheets>

    <Pane styleClass="dashboard-background" />

    <VBox spacing="16" alignment="TOP_CENTER" maxWidth="880" styleClass="dashboard-card">
        <padding>
            <Insets top="24" right="24" bottom="24" left="24" />
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="dashboard-header">
            <Label text="Gestione Sessioni" styleClass="dashboard-title" />
            <Label fx:id="corsoLabel" text="" styleClass="dashboard-subtitle" />
        </HBox>

        <Label text="Sessioni del corso" styleClass="section-title" />

        <TableView fx:id="sessioniTable" prefHeight="340" styleClass="corsi-table">
            <columns>
                <TableColumn fx:id="dataCol" text="Data" prefWidth="140" />
                <TableColumn fx:id="tipoCol" text="Tipo" prefWidth="120" />
                <TableColumn fx:id="teoriaCol" text="Teoria" prefWidth="420" />
                <TableColumn fx:id="aderentiCol" text="Aderenti" prefWidth="120" />
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Gestisci Sessioni Pratiche" onAction="#onApriPraticheClick" styleClass="secondary-button" />
        </HBox>

        <Label text="Nuova sessione" styleClass="section-title" />

        <VBox spacing="8">
            <HBox alignment="CENTER_LEFT" spacing="12">
                <DatePicker fx:id="dataSessionePicker" promptText="Data" />
                <TextField fx:id="oraSessioneField" promptText="Ora (HH:mm)" prefWidth="120" />
                <ComboBox fx:id="tipoSessioneCombo" promptText="Tipo" prefWidth="160" />
                <TextArea fx:id="teoriaField" promptText="Teoria (solo online)" prefWidth="420" prefHeight="90" wrapText="true" />
            </HBox>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Indietro" onAction="#onBackClick" styleClass="back-button" />
            <Button text="Aggiungi sessione" onAction="#onAggiungiSessioneClick" styleClass="secondary-button" />
        </HBox>
    </VBox>

</StackPane>
